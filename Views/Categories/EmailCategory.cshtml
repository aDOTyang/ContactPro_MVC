@{
}

@*<h1 class="mt-5">Email Category: @Model.GroupName</h1>*@

<div class="card p-2">
    <form asp-action="EmailCategory" asp-controller="Categories" method="post">
        <input type="hidden" asp-for="@Model.GroupName" />
        <div class="card-header">
            <h3 class="titleText fs-4 mt-2">Email Contact: @Model.GroupName</h3>
            </div>
            <div class="card-body">
            <div class="row row-cols-1 text-dark">
                <div class="col">
                <label asp-for="@Model.EmailAddress" class="form-label">To:</label>
                <textarea type="email" readonly class="form-control" asp-for="@Model.EmailAddress" rows="3"></textarea>
            </div>
            <div class="col">
                <label asp-for="@Model.EmailSubject" class="form-label">Subject:</label>
                <input type="text" class="form-control" asp-for="@Model.EmailSubject" />
            </div>
            <div class="col">
                <label asp-for="@Model.EmailBody" class="form-label">Message:</label>
                <textarea typeof="email" class="form-control" rows=10 asp-for="@Model.EmailBody" required></textarea>
            </div>
                <div class="card-footer d-flex justify-content-between p-3">
                    <a asp-action="Index" asp-controller="Categories" class="btn btn-primary rounded-pill btnLink" type="submit" value="Send">Back to List</a>
                    <button type="submit" class="btn btn-primary rounded-pill btnLink">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <script>
        let message = '@(ViewBag.SwalMessage)';
        if (!message.includes("Error") && message != '') {
            Swal.fire({
                backdrop: false,
                icon: 'success',
                title: message,
                showConfirmButton: true
            })
        } else if (message.includes("Error")) {
            Swal.fire({
                backdrop: false,
                icon: 'error',
                title: 'Oops...',
                text: message
            })
        }
    </script>
    }